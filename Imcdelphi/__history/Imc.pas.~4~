unit Imc;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TImcform = class(TForm)
    Presultados: TPanel;
    Resultado: TLabel;
    valor: TLabel;
    Edtresultados: TEdit;
    procedure EdtresultadosEnter(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Imcform: TImcform;

implementation

{$R *.dfm}

procedure TImcform.EdtresultadosEnter(Sender: TObject);
begin
valor.caption := Edtresultados.Text;
end;

end.
